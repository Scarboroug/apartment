<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN" "mybatis-3-mapper.dtd" >
  
<mapper namespace="com.hbxy.dao.BlacklistDao">

	<sql id="selectParams">
		blacklist_id, blacklist_name, blacklist_idNumber, debt
	</sql>
	<sql id="insertParams">
		blacklist_name, blacklist_idNumber, debt
	</sql>

	<resultMap type="com.hbxy.bean.BlacklistBean" id="mapBean">
		<id property="blacklistId" column="blacklist_id"/>
		<result property="blacklistName" column="blacklist_name"/>		
		<result property="blacklistIdNumber" column="blacklist_idNumber"/>		
		<result property="debt" column="debt"/>		
	</resultMap>
	
	<select id="findByIdNumber" parameterType="string" resultMap="mapBean">
		select <include refid="selectParams"></include>
			from blacklist 
			where blacklist_idNumber = #{idNumber} 
	</select>
	
	<insert id="insertBlacklist" parameterType="com.hbxy.bean.BlacklistBean">
		insert into blacklist(<include refid="insertParams"></include>)
			values(#{blacklistName, jdbcType=VARCHAR}, #{blacklistIdNumber, jdbcType=VARCHAR}, #{debt, jdbcType=NUMERIC})
	</insert>
	
	<delete id="deleteByIdNumber" parameterType="string">
		delete from blacklist 
			where blacklist_idNumber = #{idNumber}
	</delete>
</mapper>